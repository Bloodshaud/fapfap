{
    "manifest_version": 2,
    "name": "Pickup lines",
    "version": "0.1",
    "permissions": [
      "contextMenus",
      "tabs",
      "storage",
      "notifications"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"]
      }
    ],
    "page_action": {
      "default_icon": {
          "16": "images/16.png",
          "32": "images/32.png",
          "48": "images/48.png",
          "128": "images/128.png"
      }
    },
    "icons": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
}